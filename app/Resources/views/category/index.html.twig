{% extends 'base.html.twig' %}

{% block body %}
    <div class="panel panel-default">
  <!-- Default panel contents -->
  <div class="panel-heading">Category</div>

  <!-- Table -->
  <table class="table">
      <tbody>
      {% for category in categories %}
<tr>
    <td>{{ category.name }}</td>
    <td><a class="btn btn-default" href="/category/edit/{{ category.id }}">Edit</a>
    <a class="btn btn-danger" href="/category/delete/{{ category.id }}">Delete</a> </td>
</tr>
          {% endfor %}
      </tbody>
  </table>
</div>
{% endblock %}